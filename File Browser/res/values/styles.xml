<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme.Light" />

    <style name="list_image">
        <item name="android:layout_height">42dp</item>
        <item name="android:layout_width">42dp</item>
    </style>

    <style name="image_frame">
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>
    <style name="grid_image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="multi_select_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/button_text_with_drawable</item>
    </style>
    
    <style name="path_text_view_style" parent="@android:style/TextAppearance">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>
</resources>